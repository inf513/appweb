<script type="text/javascript" src="js/actividad.js"></script>
<br>
<br>
<br>
<div class="row">
	<div class="form-group">
		<div class="col-sm-4"></div>
		<div class="col-sm-4">
			<button type="button" class="btn btn-primary btn-block" name="btnnuevo" id="idbtnNuevo"><span class="glyphicon glyphicon-new-window"></span> Nueva Actividad </button>	
		</div>
	</div>
</div>
<br>
<div class="row">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover" >
			<thead>
				<tr class="danger">
					
					<th>Codigo</th>
					<th>Descripcion</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% if listado is not null %}
					{% for actividad in listado %}
						<tr>
						
							<td>{{ actividad.codigo }}</td>
							<td>{{ actividad.descripcion }}</td>
							<td><a href='#' onclick="editar({{ actividad.pkactividad }})"><span class='glyphicon glyphicon-edit' data-toggle='tooltip' title='Editar'></span></a></td>
							<td><a disabled href='#' onclick="eliminar({{ actividad.pkactividad }}, '{{ actividad.descripcion }}')"><span class='glyphicon glyphicon-trash' data-toggle='tooltip' title='Eliminar'></span></a></td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>	
	</div>	
</div>
