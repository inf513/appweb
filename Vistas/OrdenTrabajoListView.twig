<script type="text/javascript" src="js/ordenTrabajo.js"></script>
<br>
<br>
<br>
<div class="row">
	<div class="form-group">
		<div class="col-sm-4"></div>
		<div class="col-sm-4">
			<button type="button" class="btn btn-primary btn-block" name="btnnuevo" id="idbtnNuevo"><span class="glyphicon glyphicon-new-window"></span> Nueva Orden Trabajo</button>	
		</div>
	</div>
</div>
<br>
<div class="row">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<tr class="danger">
					<th>Codigo</th>
					<th>Nombre</th>
					<th>Estado</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% if listado is not null %}
					{% for ot in listado %}
						<tr>
							<td>{{ ot.data }}</td>
							<td>{{ ot.nombre }}</td>
							<td>{{ (ot.estado=='T') ? 'ACTIVO' : 'INACTIVO' }}</td>
							<td><a href='#' onclick="editar({{ ot.pkordentrabajo }})"><span class='glyphicon glyphicon-edit' data-toggle='tooltip' title='Editar'></span></a></td>
							<td><a href='#' onclick="eliminar({{ ot.pkordentrabajo }},'{{ ot.nombre }}')"><span class='glyphicon glyphicon-trash' data-toggle='tooltip' title='Eliminar'></span></a></td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>	
	</div>	
</div>
