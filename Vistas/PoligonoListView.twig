<script type="text/javascript" src="js/poligono.js"></script>
<br>
<br>
<br>
<div class="row">
	<div class="form-group">
		<div class="col-sm-4"></div>
		<div class="col-sm-4">
			<button type="button" class="btn btn-primary btn-block" name="btnnuevo" id="idbtnNuevo"><span class="glyphicon glyphicon-new-window"></span> Nuevo Poligono</button>
		</div>
	</div>
</div>
<br>
<div class="row">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover" >
			<thead>
				<tr class="danger">					
					<th>O.T.</th>
					<th>Codigo</th>
					<th>Descripcion</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% if listado is not null %}
					{% for poligono in listado %}
						<tr>
							<td>{{ poligono.codot }}</td>
							<td>{{ poligono.codigo }}</td>
							<td>{{ poligono.descripcion }}</td>
							<td><a href='#' onclick="editar({{ poligono.pkpoligono }})"><span class='glyphicon glyphicon-edit' data-toggle='tooltip' title='Editar'></span></a></td>
						    <td><a href='#' onclick="eliminar({{ poligono.pkpoligono }}, '{{ poligono.descripcion  }}')"><span class='glyphicon glyphicon-trash' data-toggle='tooltip' title='Eliminar'></span></a></td>
						</tr>						
					{% endfor %}
				{% endif %}
			</tbody>
		</table>	
	</div>	
</div>