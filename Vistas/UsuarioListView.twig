<script type="text/javascript" src="js/usuario.js"></script>
<br>
<br>
<br>
<div class="row">
	<div class="form-group">
		<div class="col-sm-4"></div>
		<div class="col-sm-4">
			<button type="button" class="btn btn-primary btn-block" name="btnnuevo" id="idbtnNuevo"><span class="glyphicon glyphicon-new-window"></span> Nuevo Usuario de sistema</button>
		</div>
	</div>
</div>
<br>
<div class="row">
	<div class="table-responsive">
		<table class="table table-striped table-bordered table-hover" >
			<thead>
				<tr class="danger">					
					<th>nickName</th>
					<th>Nombre Completo</th>
					<th>email</th>
					<th>Grupo</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			{% if listado is not null %}
				{% for usuario in listado %}
					<tr>
						<td>{{ usuario.nickname }}</td>
						<td>{{ usuario.nombrecompleto ~ ' ' ~ usuario.apellidos }}</td>
						<td>{{ usuario.email }}</td>
						<td>{{ usuario.grupo }}</td>
						<td><a href='#' onclick="editar({{ usuario.pkusuario }})"><span class='glyphicon glyphicon-edit' data-toggle='tooltip' title='Editar'></span></a></td>
						<td><a href='#' onclick="eliminar({{ usuario.pkusuario }},'{{ usuario.nombrecompleto }}')"><span class='glyphicon glyphicon-trash' data-toggle='tooltip' title='Eliminar'></span></a></td>
					</tr>
				{% endfor %}
			{% endif %}
			</tbody>
		</table>	
	</div>	
</div>